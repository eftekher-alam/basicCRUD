@model IEnumerable<BasicCRUD.Models.Employee>

<div class="container">
    <h3 class="text-primary text-center">Employee List</h3>
    <div class="row pb-3">
        <div class="col-10"></div>
        <div class="col-2">
            <a class="btn btn-sm btn-primary" asp-controller="Employee" asp-action="Create">Create Employee</a>
        </div>
    </div>

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped text-center">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Gender</th>
                    <th>Phone</th>
                    <th>Email</th>
                    <th>Department</th>
                    <th>Join Date</th>
                    <th>Picture</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model)
                {
                    <tr>
                        <td>@employee.EmpID</td>
                        <td>@employee.Name</td>
                        <td>@employee.Gender</td>
                        <td>@employee.Phone</td>
                        <td>@employee.Email</td>
                        <td>@employee.Department.DepName</td>
                        <td>@employee.JoinDate.ToString("yyyy-MM-dd")</td>
                        <td>
                            <img src="@employee.ProPic" class="rounded-circle" width="50px" height="50px" />
                        </td>
                        <td>
                            <a class="btn btn-sm btn-primary" asp-controller="Employee" asp-action="Edit" asp-route-EmpId="@employee.EmpID">Edit</a>
                            <a class="btn btn-sm btn-danger" asp-controller="Employee" asp-action="Delete" asp-route-EmpId="@employee.EmpID">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>