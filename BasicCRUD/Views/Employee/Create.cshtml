@model BasicCRUD.ViewModels.EmployeeViewModel

<div class="container">
    <div class="row">
        <div class="col-8 offset-2">
            <form method="post" asp-controller="Employee" asp-action="Create" enctype="multipart/form-data">
                <h3 class="text-primary text-center">Create Employee</h3>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="EmpID"></label>
                    </div>
                    <div class="col-10">
                        <input asp-for="EmpID" class="form-control" />
                        <span asp-validation-for="EmpID" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-10">
                        <input type="text" asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-2">
                        <label>Gender</label>
                    </div>
                    <div class="col-10">
                        <label class="mr-3">
                            <input type="radio" asp-for="Gender" value="Male" />
                            Male
                        </label>
                        <label>
                            <input type="radio" asp-for="Gender" value="Female" />
                            Female
                        </label>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="DeptId" class="mt-1">Department</label>
                    </div>
                    <div class="col-10">
                        @*<select class="form-control" asp-for="DeptId" asp-items="@(new SelectList(ViewBag.Dept, "DeptId", "DepName"))">*@
                        <select class="form-control" asp-for="DeptId">
                            <option selected>--------- Select Department ----------</option>
                            @foreach (var item in ViewBag.Dept)
                            {
                                <option value="@item.DeptId" >@item.DepName</option>
                            }
                        </select>
                        <span asp-validation-for="DeptId" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="Phone"></label>
                    </div>
                    <div class="col-10">
                        <input type="tel" asp-for="Phone" class="form-control" autocomplete="off" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="Email"></label>
                    </div>
                    <div class="col-10">
                        <input type="email" asp-for="Email" class="form-control" placeholder="xyz@gmail.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>



                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="JoinDate"></label>
                    </div>
                    <div class="col-10">
                        <input type="date" asp-for="JoinDate" class="form-control" />
                        <span asp-validation-for="JoinDate" class="text-danger"></span>
                    </div>
                </div>



                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="ProPic"></label>
                    </div>
                    <div class="col-10">
                        <input type="file" asp-for="ProPic" class="form-control-file" />
                    </div>
                </div>

                <div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-sm btn-success">Save</button>
                        <button type="reset" class="btn btn-sm btn-primary">Reset</button>
                        <a asp-controller="Employee" asp-action="Index" class="btn btn-sm btn-primary">Back</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


@*Client Side validation*@
@section Scripts{
    @{
        @*This partial view in inside the view folder*@
        <partial name="_ValidationScriptsPartial" />
    }
    <script>
        $("#JoinDate").datepicker({
            format: 'yyyy-mm-dd'
        });
    </script>
}
