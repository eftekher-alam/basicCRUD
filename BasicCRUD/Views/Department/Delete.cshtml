@model BasicCRUD.Models.Department
@{
    ViewData["Title"] = "Department Delete";
}
<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <h3 class="text-info text-center">Department Edit</h3>
            <hr />
            <form method="post" asp-controller="Department" asp-action="Delete" asp-route-DeptId="@Model.DeptId" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="DepName"></label>
                    <input asp-for="DepName" class="form-control" type="text" disabled />
                    <span asp-validation-for="DepName" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-sm btn-outline-danger w-25">Delete</button>
                    <a asp-controller="Department" asp-action="Index" class="btn btn-sm btn-outline-success w-25">Cancle</a>
                </div>

            </form>
        </div>
    </div>
</div>

@section scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}